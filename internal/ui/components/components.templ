templ ItemsGrid(icons internal.Items) {
	<div class="grid grid-cols-3 grid-rows-2 gap-0.5">
		for i := range 6 {
			if icons[i] == nil {
				<div class="aspect-square object-cover bg-neutral-900 size-full rounded-sm"></div>
			} else {
				<div class="aspect-square size-full">
					<img class="object-cover size-full rounded-sm" src={ *icons[i] }/>
				</div>
			}
		}
	</div>
}

func FmtKDA(kills, deaths, assists int) string {
	return fmt.Sprintf("%d / %d / %d", kills, deaths, assists)
}

func Fmt(x float32) string {
	return fmt.Sprintf("%.2f%", x)
}

func FmtInt(x int) string {
	return fmt.Sprintf("%.2f%", x)
}

func FmtRiotName(name, tag string) string {
	return fmt.Sprintf("%s#%s", name, tag)
}

func FmtWinLoss(wins, losses int) string {
	return fmt.Sprintf("%d-%d", wins, losses)
}
