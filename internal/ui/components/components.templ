templ THead(s ...string) {
	<thead>
		<tr class="sticky">
			for _, t := range s {
				<th>{ t }</th>
			}
		</tr>
	</thead>
}

templ TLast() {
	<div>This is the end of the table</div>
}

templ BannedChampions(icons [5]*string) {
	<div>
		for _, icon := range icons {
			<div class="size-10">
				if icon == nil {
					<div class="bg-black"></div>
				} else {
					<img src={ *icon } class="size-full"/>
				}
			</div>
		}
	</div>
}

